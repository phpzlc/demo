{% extends 'blog/base/head.html.twig' %}

{% block main_content %}
    <!--中间内容-->
    <div  class="m-container-small m-padded-tb-big">
        <div class="ui container">
            <!--header-->
            <div class="ui top attached segment">
                <div class="ui middle aligned two column grid">
                    <div class="column">
                        <h3 class="ui teal header">分类</h3>
                    </div>
                    <div class="right aligned column">
                        共 <h2 class="ui orange header m-inline-block m-text-thin"> {{count | default(0)}} </h2> 个
                    </div>
                </div>
            </div>

            <div class="ui attached segment m-padded-tb-large">
                {% for item in classifies %}
                <div class="ui labeled button m-margin-tb-tiny">
                    <a href="{{ path('blog_types')}}?id={{ item.id }}" class="ui basic teal button">{{ item.classifyName | default }}</a>
                    <div class="ui basic teal left pointing label">{{ item.articlesNumbers | default(0) }}</div>
                </div>
                {% endfor %}
            </div>

            <div class="ui top attached teal segment">
                {% for item in articles %}
                <div class="ui padded vertical segment m-padded-tb-large m-mobile-lr-clear">
                    <div class="ui mobile reversed stackable grid">
                        <div class="eleven wide column">
                            <h3 class="ui header"><a class="ui header" href="{{ path('blog_article') }}?id={{ item.id }}" >{{ item.title | default }}</a></h3>
                            <p class="m-text">{{ item.articleSummary | default }}</p>
                            <div class="ui stackable grid">
                                <div class="eleven wide column">
                                    <div class="ui mini horizontal link list">
                                        <div class="item">
                                            <img src="{{ admin_asset('asset/ico.JPG') }}" alt="" class="ui avatar image">
                                            <div class="content"><a href="#" class="header">{{ item.userAuth.subjectName | default }}</a></div>
                                        </div>
                                        <div class="item">
                                            <i class="calendar icon"></i> {{ item.createAt | date('Y-m-d') }}
                                        </div>
                                        <div class="item">
                                            <i class="eye icon"></i> {{ item.views | default(0) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="right aligned five wide column">
                                    <a href="#" target="_blank" class="ui teal basic label m-padded-tiny m-text-thin">{{ item.sort.sortName | default }}</a>
                                </div>
                            </div>
                        </div>

                        <div class="five wide column">
                            <a href="#" target="_blank">
                                <img src="{{ item.thumbnailPath | default }}" alt="" class="ui rounded image">
                            </a>
                        </div>

                    </div>
                </div>
               {% endfor %}
            </div>

