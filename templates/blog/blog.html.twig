{% extends 'blog/base/head.html.twig' %}

{% block main_content %}
    <!--中间内容-->
    <div id="waypoint" class="m-container-small m-padded-tb-big animated fadeIn">
        <div class="ui container">
            <div class="ui top attached segment">
                <div class="ui horizontal link list">
                    <div class="item">
                        <img src="{{ article.thumbnailPath | default }}" alt="" class="ui avatar image">
                        <div class="content"><a href="#" class="header">李仁密</a></div>
                    </div>
                    <div class="item">
                        <i class="calendar icon"></i> {{ article.createAt | date('Y-m-d') }}
                    </div>
                    <div class="item">
                        <i class="eye icon"></i> {{ article.views | default(0) }}
                    </div>
                </div>
            </div>
            <div class="ui attached segment">
                <!--图片区域-->
                <img src="{{ article.thumbnailPath | default }}" alt="" class="ui fluid rounded image">
            </div>
            <div class="ui  attached padded segment">
                <!--内容-->
                <div class="ui right aligned basic segment">
                    <div class="ui orange basic label">原创</div>
                </div>

                {{ article.content | raw }}

                <!--标签-->
                <div class="m-padded-lr-responsive">
                    {% if article.labels is not empty %}
                        {% for key in article.labels %}
                    <div class="ui basic teal left pointing label">{{ key }}</div>
                        {% endfor %}
                    {% endif %}
                </div>

                <!--赞赏-->
                <div class="ui center aligned basic segment">
                    <button id="payButton" class="ui orange basic circular button">赞赏</button>
                </div>
                <div class="ui payQR flowing popup transition hidden">
                    <div class="ui orange basic label">
                        <div class="ui images" style="font-size: inherit !important;">
                            <div class="image">
                                <img src="../static/images/wechat.jpg" alt="" class="ui rounded bordered image" style="width: 120px">
                                <div>支付宝</div>
                            </div>
                            <div class="image">
                                <img src="../static/images/wechat.jpg" alt="" class="ui rounded bordered image" style="width: 120px">
                                <div>微信</div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="ui attached positive message">
                <!--博客信息-->
                <div class="ui middle aligned grid">
                    <div class="eleven wide column">
                        <ui class="list">
                            <li>作者：{{ article.userAuth.subjectName | default }}（联系作者）</li>
                            <li>发表时间：{{ article.createAt | date('Y-m-d H:i:s') }}</li>
                            <li>版权声明：自由转载-非商用-非衍生-保持署名（创意共享3.0许可证）</li>
                            <li>公众号转载：请在文末添加作者公众号二维码</li>
                        </ui>
                    </div>
                    <div class="five wide column">
                        <img src="../static/images/wechat.jpg" alt="" class="ui right floated rounded bordered image" style="width: 110px">
                    </div>
                </div>
            </div>
            <div id="comment-container" class="ui bottom attached segment">
                <!--留言区域列表-->
                <div class="ui teal segment">
                    <div class="ui threaded comments">
                        <h3 class="ui dividing header">Comments</h3>
                        {% for item in commentaries %}
                        <div class="comment">
                            <a class="avatar">
                                <img src="https://unsplash.it/100/100?image=1005">
                            </a>
                            <div class="content">
                                <a class="author">{{ item.user.subjectName | default }}</a>
                                <div class="metadata">
                                    <span class="date">{{ item.creatAt | date('Y-m-d H:i:s') }}</span>
                                </div>
                                <div class="text">
                                   {{ item.content | default }}
                                </div>
                            </div>
                        </div>
                        {% endfor %}

