    <script>
        $(document).ready(function (){
            $("#submit").click(function (){
                if(!$("#content").val()){
                    alert('评论不能为空');
                }else {
                    var content = $('#content').val();
                    $('#content').val("");

                    $.ajax({
                        type: "post",
                        url: "{{ path('blog_comment') }}",
                        data: {id:"{{ article.id }}", content:content},
                        datatype: "json",
                        success: function (data){
                            alert(data.msg);
                        },
                        error: function (data){
                            alert(data.msg);
                        }
                    })
                }
            })
        })
    </script>
